load("//build/bazel_mgk_rules:mgk_ddk_ko.bzl", "define_mgk_ddk_ko")
load("//build/kernel/kleaf:kernel.bzl", "ddk_headers")
load("@mgk_info//:kernel_version.bzl", "kernel_version")

package(
    default_visibility = [
        "//visibility:public",
    ],
)

# add ddk_headers to export headers for other modules to use in the future
ddk_headers(
    name = "ddk_public_headers",
    includes = ["."],
    hdrs = glob(["**/*.h"]), # export all headers for other modules to use
)

define_mgk_ddk_ko(
    name = "mtk-btcvsd",
    srcs = [
        "mtk-btcvsd.c",
        "mtk-base-afe.h",
    ],
)

define_mgk_ddk_ko(
    name = "snd-soc-mtk-common",
    srcs = [
            "mtk-afe-platform-driver.c",
            "mtk-afe-fe-dai.c",
            "mtk-mmap-ion.c",
            "mtk-usb-offload-ops.c",
            "mtk-sram-manager.c",
            "mtk-sp-pcm-ops.c",
            "mtk-afe-debug.c",
    ],
    conditional_srcs = {
        "CONFIG_MTK_ECCCI_DRIVER": {
            True: ["mtk-usip.c"],
        },
    },
    ko_deps = [
        "//kernel_device_modules-{}/sound/soc/mediatek/ultrasound/ultra_common:mtk-scp-ultra".format(kernel_version),
        "//kernel_device_modules-{}/sound/soc/mediatek/audio_dsp:snd-soc-audiodsp-common".format(kernel_version),
        "//kernel_device_modules-{}/drivers/misc/mediatek/ccci_util:ccci_util_lib".format(kernel_version),
        "//kernel_device_modules-{}/drivers/misc/mediatek/eccci:ccci_md_all".format(kernel_version),
        "//kernel_device_modules-{}/drivers/misc/mediatek/adsp:adsp".format(kernel_version),
        "//kernel_device_modules-{}/drivers/misc/mediatek/aee/aed:aee_aed".format(kernel_version),
        "//kernel_device_modules-{}/drivers/misc/mediatek/audio_ipi:audio_ipi".format(kernel_version),
        "//kernel_device_modules-{}/drivers/misc/mediatek/irq_monitor:irq_monitor".format(kernel_version),
        "//kernel_device_modules-{}/drivers/misc/mediatek/slbc:mtk_slbc".format(kernel_version),
        "//kernel_device_modules-{}/sound/soc/mediatek/common:mtk-afe-external".format(kernel_version),
    ],
    header_deps = [
        "//kernel_device_modules-{}/sound/soc/mediatek/ultrasound/ultra_common:ddk_public_headers".format(kernel_version),
    ],
    copts = [
        "-I$(DEVICE_MODULES_PATH)/drivers/misc/mediatek/include/",
    ],
    hdrs = glob(["**/*.h"]),
    includes = ["."],
)

define_mgk_ddk_ko(
    name = "mtk-afe-external",
    srcs = [
        "mtk-afe-external.c",
        "mtk-afe-external.h",
    ],
)

define_mgk_ddk_ko(
    name = "mtk-sp-spk-amp",
    srcs = [
        "mtk-sp-spk-amp.c",
        "mtk-sp-spk-amp.h",
    ],
    ko_deps = [
        "//kernel_device_modules-{}/sound/soc/mediatek/audio_dsp:snd-soc-audiodsp-common".format(kernel_version),
        "//kernel_device_modules-{}/drivers/misc/mediatek/ccci_util:ccci_util_lib".format(kernel_version),
        "//kernel_device_modules-{}/drivers/misc/mediatek/adsp:adsp".format(kernel_version),
        "//kernel_device_modules-{}/drivers/misc/mediatek/aee/aed:aee_aed".format(kernel_version),
        "//kernel_device_modules-{}/drivers/misc/mediatek/audio_ipi:audio_ipi".format(kernel_version),
        "//kernel_device_modules-{}/drivers/misc/mediatek/irq_monitor:irq_monitor".format(kernel_version),
        "//kernel_device_modules-{}/drivers/misc/mediatek/slbc:mtk_slbc".format(kernel_version),
        "//kernel_device_modules-{}/sound/soc/mediatek/common:mtk-afe-external".format(kernel_version),
    ],
    header_deps = [
        "//kernel_device_modules-{}/sound/soc/codecs/richtek:ddk_public_headers".format(kernel_version),
        "//kernel_device_modules-{}/sound/soc/codecs/tfa98xx:ddk_public_headers".format(kernel_version),
        "//kernel_device_modules-{}/sound/soc/codecs/aw882xx:ddk_public_headers".format(kernel_version),
        "//kernel_device_modules-{}/sound/soc/codecs/sma1305:ddk_public_headers".format(kernel_version),
    ],
    copts = [
        "-I$(DEVICE_MODULES_PATH)/drivers/misc/mediatek/include/",
    ],
)

filegroup(
    name = "ddk_kconfigs",
    srcs = glob([
        "**/Kconfig",
    ]),
)

filegroup(
    name = "srcs",
    srcs = glob([
          "**/Makefile",
          "**/Kbuild",
          "**/*.c",
          "**/*.h",
    ]),
)
