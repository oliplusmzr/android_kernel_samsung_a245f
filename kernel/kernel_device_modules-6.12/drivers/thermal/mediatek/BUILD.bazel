load("//build/bazel_mgk_rules:mgk_ddk_ko.bzl", "define_mgk_ddk_ko")
load("//build/kernel/kleaf:kernel.bzl", "ddk_headers")
load("@mgk_info//:kernel_version.bzl", "kernel_version",)

package(
    default_visibility = [
        "//visibility:public",
    ],
)

filegroup(
    name = "ddk_kconfigs",
    srcs = glob([
        "**/Kconfig",
    ]),
)

filegroup(
    name = "ddk_makefile",
    srcs = glob([
        "**/Makefile",
        "**/Kbuild",
        "**/*.c",
        "**/*.h",
    ]),
)

ddk_headers(
    name = "thermal_headers",
    hdrs = glob(["**/*.h"]),
    includes = ["."],
)

define_mgk_ddk_ko(
    name = "board_temp",
    srcs = [
        "board_temp.c",
    ],
    includes = [
        "$(srctree)/drivers/thermal",
        "$(DEVICE_MODULES_PATH)/drivers/thermal/mediatek",
    ],
    copts = [
        "-I$(srctree)/drivers/thermal",
    ],
)

define_mgk_ddk_ko(
    name = "charger_cooling",
    srcs = [
        "charger_cooling.c",
    ],
    hdrs = [
        "charger_cooling.h",
    ],
    copts = [
        "-I$(srctree)/drivers/thermal",
    ],
)

define_mgk_ddk_ko(
    name = "pmic_temp",
    srcs = [
        "pmic_temp.c",
    ],
    copts = [
        "-I$(srctree)/drivers/thermal",
    ],
)

define_mgk_ddk_ko(
    name = "backlight_cooling",
    srcs = [
        "backlight_cooling.c",
    ],
    hdrs = [
        "backlight_cooling.h",
    ],
    ko_deps = [
        "//kernel_device_modules-{}/drivers/leds:leds-mtk".format(kernel_version)
    ],
)

define_mgk_ddk_ko(
    name = "wifi_cooling",
    srcs = [
        "wifi_cooling.c",
    ],
    hdrs = [
        "wifi_cooling.h",
        "thermal_interface.h",
    ],
    ko_deps = [
        "//kernel_device_modules-{}/drivers/misc/mediatek/connectivity:connadp".format(kernel_version),
        "//kernel_device_modules-{}/drivers/thermal/mediatek:thermal_interface".format(kernel_version)
    ],
)

define_mgk_ddk_ko(
    name = "thermal_interface",
    srcs = [
        "thermal_interface.c",
    ],
    hdrs = [
        "thermal_interface.h",
        "vtskin_temp.h",
    ],
    header_deps = [
        "//kernel_device_modules-{}/drivers/gpu/mediatek/gpufreq/v2:gpufreq_public_headers".format(kernel_version)
    ],
    ko_deps = [
        "//kernel_device_modules-{}/drivers/gpu/mediatek/gpufreq/v2:mtk_gpufreq_wrapper".format(kernel_version),
        "//kernel_device_modules-{}/drivers/gpu/drm/mediatek/mediatek_v2:mediatek-drm".format(kernel_version),
        "//kernel_device_modules-{}/drivers/leds:leds-mtk".format(kernel_version),
        "//kernel_device_modules-{}/drivers/memory/mediatek:mtk_dramc".format(kernel_version),
        "//kernel_device_modules-{}/drivers/misc/mediatek/dvfsrc:mtk-dvfsrc-helper".format(kernel_version)
    ],
    copts = [
        "-I$(DEVICE_MODULES_PATH)/drivers/misc/mediatek/include/mt-plat"
    ],
)

define_mgk_ddk_ko(
    name = "soc_temp_lvts",
    srcs = [
        "soc_temp_lvts.c",
    ],
    hdrs = [
        "soc_temp_lvts.h",
        "thermal_interface.h",
