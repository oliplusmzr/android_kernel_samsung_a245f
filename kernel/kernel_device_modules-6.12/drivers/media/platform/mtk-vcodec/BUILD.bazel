load("//build/bazel_mgk_rules:mgk_ddk_ko.bzl", "define_mgk_ddk_ko")
load("//build/kernel/kleaf:kernel.bzl", "ddk_headers")
load("@mgk_info//:kernel_version.bzl", "kernel_version",)
load("@mgk_info//:dict.bzl", "DEFCONFIG_OVERLAYS",)

package(
    default_visibility = [
        "//visibility:public",
    ],
)

filegroup(
    name = "ddk_kconfigs",
    srcs = glob([
        "**/Kconfig",
    ]),
)

filegroup(
    name = "srcs",
    srcs = glob([
        "**/*.c",
        "**/*.h",
    ]),
)

# to export headers for other modules to use
ddk_headers(
    name = "headers",
    hdrs = [
        "mtk_vcodec_util.h",
        "mtk-v4l2-controls.h",
        "vcodec_ipi_msg.h",
    ],
    includes = ["."],
)

define_mgk_ddk_ko(
    name = "mtk-vcodec-common",
    srcs = [],
    conditional_srcs = {
        "CONFIG_DEVICE_MODULES_VIDEO_MEDIATEK_VCODEC": {
            True: glob([
                "mtk_vcodec_util.c",
                "mtk_vcodec_intr.c",
                "mtk_vcodec_fence.c",
                "*.h",
            ]),
        },
    },
    hdrs = [
        "mtk_vcodec_util.h",
        "mtk-v4l2-controls.h",
        "vcodec_ipi_msg.h",
    ] + [
        "//kernel_device_modules-{}/drivers/misc/mediatek/slbc:headers".format(kernel_version),
        "//kernel_device_modules-{}/drivers/media/platform/mtk-vcu:headers".format(kernel_version),
    ],
    includes = [
        ".",
    ],
    header_deps = [
        "//kernel_device_modules-{}/drivers/misc/mediatek/videogo:headers".format(kernel_version),
    ],
    ko_deps = [
        "//kernel_device_modules-{}/drivers/dma-buf/heaps:system_heap".format(kernel_version),
        "//kernel_device_modules-{}/drivers/misc/mediatek/sched:scheduler".format(kernel_version),
    ],
    copts = [
        "-Werror",
        "-I$(srctree)/kernel/",
        "-I$(DEVICE_MODULES_PATH)/drivers/misc/mediatek/include/mt-plat",
    ],
)

