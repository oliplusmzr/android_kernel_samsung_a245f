    srcs = [
        "mtk_vdisp.c",
    ],
    hdrs = glob(["**/*.h"]),
    includes = ["."],
    copts = [
        "-I$(DEVICE_MODULES_PATH)/drivers/gpu/drm/mediatek/dpc/dpc_v1",
