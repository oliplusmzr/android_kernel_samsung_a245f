			],
		},
		"CONFIG_UFSHID": {
			True: [
				"vendor/ufshid.c",
			],
		},
		"CONFIG_UFSRINGBUF": {
			True: [
				"vendor/ufsringbuf.c",
			],
		},
	},

	copts = [
		"-I$(DEVICE_MODULES_PATH)/drivers/clk/mediatek/",
		"-I$(DEVICE_MODULES_PATH)/drivers/misc/mediatek/include/",
		"-I$(DEVICE_MODULES_PATH)/drivers/misc/mediatek/blocktag/",
		"-I$(DEVICE_MODULES_PATH)/drivers/misc/mediatek/power_throttling/",
		"-I$(DEVICE_MODULES_PATH)/drivers/ufs/",
		"-I$(DEVICE_MODULES_PATH)/drivers/ufs/vendor/",
		"-I$(srctree)/drivers/ufs/",
		"-I$(srctree)/drivers/ufs/core/",
		"-I$(srctree)/drivers/ufs/host/",
		"-I$(srctree)/drivers/devfreq/",
		"-I$(srctree)/kernel/",
	],
