	conditional_srcs = {
		"CONFIG_UFS_MEDIATEK_MT6893": {
			True: [
				"ufs-mediatek-sysfs.c",
				"ufs-mediatek-mimic.c",
				"ufs-mediatek-mbrain.c",
			],
			False: [
				"ufs-mediatek.c",
