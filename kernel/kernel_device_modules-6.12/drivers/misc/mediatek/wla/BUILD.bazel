        "wla_fs/wla_sysfs.c",
        "wla_fs/wla_sysfs_procfs.c",
        "wla_fs/wla_dbg_sysfs.c",
    ],
    ko_deps = [
        ":wla-v2",
    ],
    hdrs = [
        "wla_fs/wla_sysfs.h",
        "wla_fs/wla_kernfs.h",
        "wla_fs/wla_dbg_sysfs.h",
    ],
    includes = [
        "version/v2",
        "wla_fs",
    ],
