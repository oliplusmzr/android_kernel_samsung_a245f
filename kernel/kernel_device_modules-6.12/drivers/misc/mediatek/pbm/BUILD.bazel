        "$(srctree)/drivers/gpu/mediatek/gpufreq",
        "$(DEVICE_MODULES_PATH)/drivers/gpu/mediatek/gpueb",
    ],
    copts = [
        "-I$(srctree)/drivers/gpu/mediatek/gpufreq",
        "-I$(DEVICE_MODULES_PATH)/drivers/gpu/mediatek/gpueb",
    ],
)
