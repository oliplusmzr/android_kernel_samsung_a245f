## ddk ko

# isp6s
define_mgk_ddk_ko(
    name = "camera_eeprom",
    srcs = [
        "common/v2/eeprom_driver.c",
        "common/v2/eeprom_i2c_common_driver.c",
        "common/v2/eeprom_utils.c",
    ] + [
        "custom/eeprom_i2c_custom_driver.c",
        #"custom/cam_cal_list.c",
    ],
    conditional_srcs = {
      "CONFIG_CAMERA_AAX_V15": {
        True: glob([
          "custom/aax_v15/*.c",
        ]),
      },
      "CONFIG_CAMERA_AAX_V16": {
        True: glob([
          "custom/aax_v16/*.c",
        ]),
      },
      "CONFIG_CAMERA_AAY_V17": {
        True: glob([
          "custom/aay_v17/*.c",
        ]),
      },
      "CONFIG_CAMERA_AAW_V24": {
        True: glob([
          "custom/aaw_v24/*.c",
        ]),
      },
    },
    ko_deps = [
        "//kernel_device_modules-{}/drivers/misc/mediatek/imgsensor/src:imgsensor_isp6s".format(kernel_version),
        "//kernel_device_modules-{}/drivers/misc/mediatek/lens/vcm/proprietary/main:mainaf".format(kernel_version),
    ],
    header_deps = [
        "//kernel_device_modules-{}/drivers/misc/mediatek/cam_cal:cam_cal_header".format(kernel_version),
        "//kernel_device_modules-{}/drivers/misc/mediatek/imgsensor:imgsensor_kd_header".format(kernel_version),
    ],
    hdrs = glob([
        "**/*.h"
    ]),
    # copts = [
    #     "-I$(DEVICE_MODULES_PATH)/drivers/i2c/busses",
    # ],
    includes = [
        ".",
        "common/v2",
        "custom",
    ],
)

