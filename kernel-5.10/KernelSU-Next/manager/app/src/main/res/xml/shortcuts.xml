            android:action="ACTION_SUPERUSER"
            android:targetPackage="com.rifsxd.ksunext"
            android:targetClass="com.rifsxd.ksunext.ui.MainActivity" />
        <categories android:name="android.shortcut.conversation" />
    </shortcut>

    <!-- Shortcut 3: Modules -->
    <shortcut
        android:shortcutId="modules_shortcut"
        android:enabled="true"
        android:icon="@drawable/ic_modules"
        android:shortcutShortLabel="@string/home_module_count_plural"
        android:shortcutLongLabel="@string/home_module_count_plural">
        <intent
            android:action="ACTION_MODULES"
            android:targetPackage="com.rifsxd.ksunext"
