<?xml version="1.0" encoding="utf-8"?>
<shortcuts xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shortcut 1: Settings -->
    <shortcut
        android:shortcutId="settings_shortcut"
        android:enabled="true"
        android:icon="@drawable/ic_settings"
        android:shortcutShortLabel="@string/settings"
        android:shortcutLongLabel="@string/settings">
        <intent
            android:action="ACTION_SETTINGS"
            android:targetPackage="com.rifsxd.ksunext"
            android:targetClass="com.rifsxd.ksunext.ui.MainActivity" />
        <categories android:name="android.shortcut.conversation" />
    </shortcut>

    <!-- Shortcut 2: Superuser -->
    <shortcut
