load(
    "@kleaf//build/kernel/kleaf:kernel.bzl",
    "ddk_headers",
    "kernel_module_group",
)
package(
    default_visibility = [
        "//:__subpackages__",
        "@kleaf//common:__pkg__",
    ],
)
ddk_headers(
    name = "mali_arbitration_shared_config_defaults",
    includes = ["midgard"] +
               select({
                   "//vendor/mediatek/kernel_modules/gpu/gpu_mali/mali_avalon/a16w_jm/config:mali_arbitration": ["arbitration"],
                   "//conditions:default": [],
               }),
)
filegroup(
    name = "gpu_kconfig",
    srcs = [
        "//drivers/gpu/arm/midgard:midgard_kconfig",
    ] + select({
        "//vendor/mediatek/kernel_modules/gpu/gpu_mali/mali_avalon/a16w_jm/config:mali_arbitration": ["//drivers/gpu/arm/arbitration:arbitration_kconfig"],
        "//conditions:default": [],
    }),
)
kernel_module_group(
    name = "gpu",
    srcs = ["//drivers/gpu/arm/midgard:mali_kbase"] +
           select({
               "//vendor/mediatek/kernel_modules/gpu/gpu_mali/mali_avalon/a16w_jm/config:mali_arbitration": ["//drivers/gpu/arm/arbitration:arbitration"],
               "//conditions:default": [],
           }) + select({
        "//vendor/mediatek/kernel_modules/gpu/gpu_mali/mali_avalon/a16w_jm/config:mali_debug_kutf": ["//drivers/gpu/arm/midgard/tests:mali_kutf_tests"],
        "//conditions:default": [],
    }),
)
