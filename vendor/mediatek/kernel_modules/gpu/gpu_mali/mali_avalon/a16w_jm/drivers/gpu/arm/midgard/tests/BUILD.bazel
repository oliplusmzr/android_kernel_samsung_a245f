load(
    "@kleaf//build/kernel/kleaf:kernel.bzl",
    "ddk_headers",
    "ddk_module",
    "kernel_module_group",
)
load("//config:cflags.bzl", "CFLAGS_MODULE", "COPTS_KBASE")

package(
    default_visibility = [
        "//:__subpackages__",
        "@kleaf//common:__pkg__",
    ],
)

filegroup(
    name = "kutf_kconfig",
    srcs = ["Kconfig"],
)

ddk_headers(
    name = "kutf_headers",
    hdrs = glob(["include/kutf/*.h"]),
    includes = ["include"],
)

kernel_module_group(
    name = "mali_kutf_tests",
    srcs = [
        ":mali_kutf",
        ":mali_kutf_clk_rate_trace_test",
        ":mali_kutf_irq_test",
        ":mali_kutf_mgm_integration_test",
    ],
)

ddk_module(
    name = "mali_kutf",
    srcs = [
        "kutf/kutf_helpers.c",
        "kutf/kutf_helpers_user.c",
        "kutf/kutf_kprobe.c",
        "kutf/kutf_mem.c",
        "kutf/kutf_resultset.c",
        "kutf/kutf_suite.c",
        "kutf/kutf_utils.c",
    ],
    out = "kutf.ko",
    hdrs = [
        ":kutf_headers",
        "//drivers/gpu/arm/midgard:mali_kernel_headers",
    ],
    copts = CFLAGS_MODULE + COPTS_KBASE,
    defconfig = "//config/fragment:kbase_defconfig",
    kconfig = "//drivers/gpu/arm/midgard:midgard_kconfig",
    kernel_build = "@kleaf//common:kernel_aarch64",
)

ddk_module(
    name = "mali_kutf_irq_test",
    srcs = ["mali_kutf_irq_test/mali_kutf_irq_test_main.c"],
    out = "mali_kutf_irq_test.ko",
    hdrs = [
        ":kutf_headers",
        "//drivers/gpu/arm/midgard:mali_kernel_headers",
    ],
    copts = CFLAGS_MODULE + COPTS_KBASE,
    defconfig = "//config/fragment:kbase_defconfig",
    kconfig = "//drivers/gpu/arm/midgard:midgard_kconfig",
    kernel_build = "@kleaf//common:kernel_aarch64",
    deps = [
        ":mali_kutf",
        "//drivers/gpu/arm/midgard:mali_kbase",
    ],
)

ddk_module(
    name = "mali_kutf_clk_rate_trace_test",
    srcs = ["mali_kutf_clk_rate_trace/kernel/mali_kutf_clk_rate_trace_test.c"],
    out = "mali_kutf_clk_rate_trace_test_portal.ko",
    hdrs = ["mali_kutf_clk_rate_trace/mali_kutf_clk_rate_trace_test.h"],
    copts = CFLAGS_MODULE + COPTS_KBASE,
    defconfig = "//config/fragment:kbase_defconfig",
    kconfig = "//drivers/gpu/arm/midgard:midgard_kconfig",
    kernel_build = "@kleaf//common:kernel_aarch64",
    deps = [
        ":mali_kutf",
        "//drivers/gpu/arm/midgard:mali_kbase",
    ],
)

ddk_module(
    name = "mali_kutf_mgm_integration_test",
    srcs = ["mali_kutf_mgm_integration_test/mali_kutf_mgm_integration_test_main.c"],
    out = "mali_kutf_mgm_integration_test.ko",
    hdrs = ["//drivers/gpu/arm/midgard:mali_kernel_headers"],
    copts = CFLAGS_MODULE + COPTS_KBASE,
    defconfig = "//config/fragment:kbase_defconfig",
    kconfig = "//drivers/gpu/arm/midgard:midgard_kconfig",
    kernel_build = "@kleaf//common:kernel_aarch64",
    deps = [
        ":mali_kutf",
        "//drivers/gpu/arm/midgard:mali_kbase",
    ],
)
