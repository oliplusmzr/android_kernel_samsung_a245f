load(
    "//build/kernel/kleaf:kernel.bzl",
    "ddk_headers",
    "kernel_module_group",
)
package(
    default_visibility = [
        "//visibility:public",
    ],
)
ddk_headers(
    name = "kernel_headers",
    hdrs = glob([
        "include/**/*.h",
    ]),
    includes = [
        "include",
        "include/linux",
    ],
)
filegroup(
    name = "kconfigs",
    srcs = [
        "//drivers/base/arm:base_kconfig",
        "//drivers/gpu/arm:gpu_kconfig",
    ],
)
kernel_module_group(
    name = "modules",
    srcs = [
        "//drivers/base/arm:base",
        "//drivers/gpu/arm:gpu",
    ] + select({
        "//config:xen_arbiter": ["//drivers/xen/arm:xen_module"],
        "//conditions:default": [],
    }),
)
