load("//build/bazel_mgk_rules:mgk_ddk_ko.bzl", "define_mgk_ddk_ko")
load("@mgk_info//:kernel_version.bzl", "kernel_version")
load("//build/kernel/kleaf:kernel.bzl", "ddk_headers")

package(
    default_visibility = [
        "//visibility:public",
    ],
)

ddk_headers(
    name = "vcore_api_headers",
    hdrs = glob(["**/*.h"]),
    includes = ["."],
)

define_mgk_ddk_ko(
    name = "met_vcore_api_int",
    hdrs = [":vcore_api_headers"],
    srcs = glob(["met_vcore_api.c"]),
    out = "met_vcore_api.ko",
    ko_deps = [
        "//vendor/mediatek/kernel_modules/met_drv_v3:met_drv_v3",
        "//vendor/mediatek/kernel_modules/met_drv_secure_v3:met_drv_secure_v3",
        "//kernel_device_modules-{}/drivers/misc/mediatek/dvfsrc:mtk-dvfsrc-helper".format(kernel_version),
    ],
    copts = [
        "-I$(DEVICE_MODULES_PATH)/drivers/misc/mediatek/include/mt-plat/",
    ],
    local_defines = [
        "MET_VCOREDVFS",
    ],
)

define_mgk_ddk_ko(
    name = "met_vcore_api_cus",
    hdrs = [":vcore_api_headers"],
    srcs = glob(["met_vcore_api.c"]),
    out = "met_vcore_api.ko",
    ko_deps = [
        "//vendor/mediatek/kernel_modules/met_drv_v3:met_drv_v3",
        "//kernel_device_modules-{}/drivers/misc/mediatek/dvfsrc:mtk-dvfsrc-helper".format(kernel_version),
    ],
    copts = [
        "-I$(DEVICE_MODULES_PATH)/drivers/misc/mediatek/include/mt-plat/",
    ],
    local_defines = [
        "MET_VCOREDVFS",
    ],
)