load("//build/bazel_mgk_rules:mgk_ddk_ko.bzl", "define_mgk_ddk_ko")
load("@mgk_info//:kernel_version.bzl", "kernel_version")
load("//build/kernel/kleaf:kernel.bzl", "ddk_headers")

package(
    default_visibility = [
        "//visibility:public",
    ],
)

ddk_headers(
    name = "ipi_api_headers",
    hdrs = glob(["**/*.h"]),
    includes = ["."],
)

define_mgk_ddk_ko(
    name = "met_ipi_api_int",
    hdrs = [":ipi_api_headers"],
    srcs = glob(["met_ipi_api.c"]),
    out = "met_ipi_api.ko",
    ko_deps = [
        "//vendor/mediatek/kernel_modules/met_drv_v3:met_drv_v3",
        "//vendor/mediatek/kernel_modules/met_drv_secure_v3:met_drv_secure_v3",
        "//kernel_device_modules-{}/drivers/soc/mediatek:mtk_tinysys_ipi".format(kernel_version),
    ],
    copts = [
        "-I$(DEVICE_MODULES_PATH)/include/linux/soc/mediatek",
    ],
    local_defines = [
        "MET_GPUEB",
        "MET_MCUPM",
    ],
)

define_mgk_ddk_ko(
    name = "met_ipi_api_cus",
    hdrs = [":ipi_api_headers"],
    srcs = glob(["met_ipi_api.c"]),
    out = "met_ipi_api.ko",
    ko_deps = [
        "//vendor/mediatek/kernel_modules/met_drv_v3:met_drv_v3",
        "//kernel_device_modules-{}/drivers/soc/mediatek:mtk_tinysys_ipi".format(kernel_version),
    ],
    copts = [
        "-I$(DEVICE_MODULES_PATH)/include/linux/soc/mediatek",
    ],
    local_defines = [
        "MET_GPUEB",
        "MET_MCUPM",
    ],
)