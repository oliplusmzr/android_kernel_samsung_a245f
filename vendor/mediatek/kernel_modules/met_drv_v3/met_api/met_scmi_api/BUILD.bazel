load("//build/bazel_mgk_rules:mgk_ddk_ko.bzl", "define_mgk_ddk_ko")
load("@mgk_info//:kernel_version.bzl", "kernel_version")
load("//build/kernel/kleaf:kernel.bzl", "ddk_headers")

package(
    default_visibility = [
        "//visibility:public",
    ],
)

ddk_headers(
    name = "scmi_api_headers",
    hdrs = glob(["**/*.h"]),
    includes = ["."],
)

define_mgk_ddk_ko(
    name = "met_scmi_api_int",
    hdrs = [":scmi_api_headers"],
    srcs = glob(["met_scmi_api.c"]),
    out = "met_scmi_api.ko",
    ko_deps = [
        "//vendor/mediatek/kernel_modules/met_drv_v3:met_drv_v3",
        "//vendor/mediatek/kernel_modules/met_drv_secure_v3:met_drv_secure_v3",
        "//kernel_device_modules-{}/drivers/misc/mediatek/tinysys_scmi:tinysys-scmi".format(kernel_version),
    ],
    local_defines = [
        "MET_PLF_EXIST",
        "MET_SSPM",
        "MET_SCMI",
    ],
)

define_mgk_ddk_ko(
    name = "met_scmi_api_cus",
    hdrs = [":scmi_api_headers"],
    srcs = glob(["met_scmi_api.c"]),
    out = "met_scmi_api.ko",
    ko_deps = [
        "//vendor/mediatek/kernel_modules/met_drv_v3:met_drv_v3",
        "//kernel_device_modules-{}/drivers/misc/mediatek/tinysys_scmi:tinysys-scmi".format(kernel_version),
    ],
    local_defines = [
        "MET_SSPM",
        "MET_SCMI",
    ],
)
