load("//build/bazel_mgk_rules:mgk_ddk_ko.bzl", "define_mgk_ddk_ko")
load("//build/kernel/kleaf:kernel.bzl", "ddk_headers")
load("@mgk_info//:kernel_version.bzl","kernel_version")

package(
    default_visibility = [
        "//visibility:public",
    ],
)

filegroup(
    name = "headers",
    srcs = glob([
        "**/*.h",
    ]),
)

define_mgk_ddk_ko(
    name = "gps_drv_stp",
    srcs = [
        "stp_chrdev_gps.c",
        "stp_chrdev_gps2.c",
        "lna_ctrl/src/gps_lna_drv.c",
        "gps_emi.c",
        "fw_log_gps.c",
    ],
    header_deps = [
        "//vendor/mediatek/kernel_modules/connectivity/common:wmt_drv_headers",
        "//kernel_device_modules-{}/drivers/misc/mediatek/connectivity:connadp_headers".format(kernel_version),
    ],
    ko_deps = [
        "//vendor/mediatek/kernel_modules/connectivity/common:wmt_drv",
    ],
    includes = [
        "lna_ctrl/inc",
        ".",
    ],
    hdrs = glob([
        "**/*.h"
    ]),
    local_defines = [
        "MTK_WCN_WMT_STP_EXP_SYMBOL_ABSTRACT",
        "WMT_IDC_SUPPORT=1",
        "MTK_GENERIC_HAL",
        "CONFIG_GPSL5_SUPPORT",
        "CONFIG_MTK_GPS_EMI",
        "SOC_CO_CLOCK_FLAG=1",
        "WMT_CREATE_NODE_DYNAMIC=1",
        "REMOVE_MK_NODE=0",
    ],
    out = "gps_drv_stp.ko",
    copts = [
        "-Wall",
        "-Werror",
        "-I$(DEVICE_MODULES_PATH)/drivers/misc/mediatek/include/mt-plat",
    ],
)